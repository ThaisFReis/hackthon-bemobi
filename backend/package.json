{
  "name": "poc-bemobi-backend",
  "version": "1.0.0",
  "description": "AI Churn Prevention POC Backend - Node.js/Express API with Stripe integration",
  "main": "dist/server.js",
  "scripts": {
    "build": "prisma generate && tsc",
    "start": "./start.sh",
    "dev": "tsx watch src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset && npm run db:seed"
  },
  "keywords": [
    "churn-prevention",
    "ai",
    "stripe",
    "poc",
    "express",
    "typescript"
  ],
  "author": "POC Team",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^0.3.77",
    "@langchain/google-genai": "^0.2.18",
    "@prisma/client": "^6.16.2",
    "@supabase/supabase-js": "^2.58.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "langsmith": "^0.3.71",
    "socket.io": "^4.7.4",
    "stripe": "^14.5.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^6.16.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
